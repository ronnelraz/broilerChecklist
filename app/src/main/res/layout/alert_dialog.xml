<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools">


    <com.google.android.material.card.MaterialCardView
        android:layout_margin="10dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        android:elevation="5dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                tools:src="@drawable/icons8_ok" />


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerInParent="true"
                android:fontFamily="@font/baloo"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:text="Title" />


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerInParent="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:fontFamily="@font/baloo_bhai_2"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                tools:text="Neque porro quisquam est qui dolorem ipsum quia dolor sit amet, consectetur, adipisci velit..." />


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="25dp"
                    tools:text="Cancel"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/btn_success"
                    app:cornerRadius="20dp"
                    app:rippleColor="@color/box_color"
                    android:fontFamily="@font/baloo"
                    android:textSize="11sp"
                    android:id="@+id/negative"/>


                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="25dp"
                    tools:text="OK"
                    app:backgroundTint="@color/colorStartGrad"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/colorEndGrad"
                    app:cornerRadius="20dp"
                    app:rippleColor="@color/box_color"
                    android:id="@+id/positive"
                    android:fontFamily="@font/baloo"
                    android:textSize="11sp"/>

            </LinearLayout>



        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>